{% extends "::base.html.twig" %}

{% block title %}AdrjBundle:Files:access_page{% endblock %}

{% block body %}
<div id="files">
<h1>Pliki: dostep</h1>
    {% if message is defined %}
    <p class="message">{{ message }}</p>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('files_add_file') }}">dodaj pliki</a>
    {% endif %}
    <a href="{{ path('files_show_list') }}">pliki publiczne</a>
    <p>Wprowadz token, aby uzyskac dostep do plikow przeznaczonych dla ciebie</p>
    <div class="access-form">
        {{ form(tokenForm) }}
    </div>
</div>
{% endblock %}
